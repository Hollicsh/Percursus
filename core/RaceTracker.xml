<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="RaceTrackerMixin.lua"/>

	<Frame name="PercursusRaceTrackerTemplate" mixin="PercursusRaceTrackerMixin" hidden="true" virtual="true">
		<Size x="256" y="64"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background">
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Timer" inherits="GameFontNormalLarge"/>
				<FontString parentKey="Info" inherits="GameFontNormal"/>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="PercursusRaceTrackerSpeedDisplayTemplate" mixin="PercursusRaceTrackerSpeedDisplayMixin" hidden="true" virtual="true">
		<Size x="220" y="31"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture atlas="UI-Frame-Bar-BorderCenter">
					<Size x="150" y="31"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<Texture atlas="UI-Frame-Bar-BorderLeft">
					<Size x="35" y="31"/>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
				</Texture>
				<Texture atlas="UI-Frame-Bar-BorderRight">
					<Size x="35" y="31"/>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="-1">
				<Texture parentKey="SpeedBar" atlas="UI-Frame-DastardlyDuos-ProgressBar-Fill-yellow">
					<Size x="1" y="18"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="-2">
				<Texture atlas="UI-Frame-Bar-BGCenter">
					<Size x="150" y="18"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<Texture atlas="UI-Frame-Bar-BGLeft">
					<Size x="29" y="18"/>
					<Anchors>
						<Anchor point="LEFT">
							<Offset x="6" y="0"/>
						</Anchor>
					</Anchors>
				</Texture>
				<Texture atlas="UI-Frame-Bar-BGRight">
					<Size x="29" y="18"/>
					<Anchors>
						<Anchor point="RIGHT">
							<Offset x="-6" y="0"/>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>
</Ui>
